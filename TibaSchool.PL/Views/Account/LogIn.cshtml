@model LoginVM
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>TIBA - Log in</title>
    <link rel="icon" type="image/png" href="~/images/icons/logo2.png">
    <link rel="manifest" href="~/DashBoard/assets/img/favicons/manifest.json">
    <meta name="msapplication-TileImage" content="~/DashBoard/assets/img/favicons/mstile-150x150.png">
    <meta name="theme-color" content="#ffffff">
    <script src="~/DashBoard/assets/js/config.js"></script>
    <script src="~/DashBoard/vendors/simplebar/simplebar.min.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700%7cPoppins:300,400,500,600,700,800,900&amp;display=swap" rel="stylesheet">
    <link href="~/DashBoard/vendors/simplebar/simplebar.min.css" rel="stylesheet">
    <link href="~/DashBoard/assets/css/theme-rtl.min.css" rel="stylesheet" id="style-rtl">
    <link href="~/DashBoard/assets/css/theme.min.css" rel="stylesheet" id="style-default">
    <link href="~/DashBoard/assets/css/user-rtl.min.css" rel="stylesheet" id="user-style-rtl">
    <link href="~/DashBoard/assets/css/user.min.css" rel="stylesheet" id="user-style-default">
    <script>
        var isRTL = JSON.parse(localStorage.getItem('isRTL'));
        if (isRTL) {
            var linkDefault = document.getElementById('style-default');
            var userLinkDefault = document.getElementById('user-style-default');
            linkDefault.setAttribute('disabled', true);
            userLinkDefault.setAttribute('disabled', true);
            document.querySelector('html').setAttribute('dir', 'rtl');
        } else {
            var linkRTL = document.getElementById('style-rtl');
            var userLinkRTL = document.getElementById('user-style-rtl');
            linkRTL.setAttribute('disabled', true);
            userLinkRTL.setAttribute('disabled', true);
        }
    </script>
</head>

<body>
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
        <div class="container" data-layout="container">
            <script>
                var isFluid = JSON.parse(localStorage.getItem('isFluid'));
                if (isFluid) {
                    var container = document.querySelector('[data-layout]');
                    container.classList.remove('container');
                    container.classList.add('container-fluid');
                }
            </script>
            <div class="row flex-center min-vh-100 py-6">
                <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                    <a class="d-flex flex-center mb-4" asp-controller="Home" asp-action="Index"><span class="font-sans-serif fw-bolder fs-5 d-inline-block">TIBA School</span></a>
                    <div class="card">
                        <div class="card-body p-4 p-sm-5">
                            <div class="row flex-between-center mb-2">
                                <div class="col-auto">
                                    <span class="font-sans-serif fw-bolder fs-5 d-inline-block">Log In</span>
                                </div>
                                <div class="col-auto fs--1 text-600"><span class="mb-0 undefined">or</span> <span><a asp-controller="Account" asp-action="Registration">Create an account</a></span></div>

                            </div>

                            <!-- ======================= Form ========================-->
                            <form asp-controller="Account" asp-action="Login">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="mb-3"><input class="form-control" type="text" asp-for="UserName" placeholder="User Name" /></div>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                <div class="mb-3"><input class="form-control" type="password" asp-for="Password" placeholder="Password" /></div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="mb-3"><button class="btn btn-primary d-block w-100 mt-3" type="submit">Log in</button></div>
                            </form>
                            <!-- ===============================================-->                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main><!-- ===============================================-->
    <!--    End of Main Content-->
    <!-- ===============================================-->
    <!-- ===============================================-->
    <!--    JavaScripts-->
    <!-- ===============================================-->
    <script src="~/DashBoard/vendors/popper/popper.min.js"></script>
    <script src="~/DashBoard/vendors/bootstrap/bootstrap.min.js"></script>
    <script src="~/DashBoard/vendors/anchorjs/anchor.min.js"></script>
    <script src="~/DashBoard/vendors/is/is.min.js"></script>
    <script src="~/DashBoard/vendors/fontawesome/all.min.js"></script>
    <script src="~/DashBoard/vendors/lodash/lodash.min.js"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
    <script src="~/DashBoard/vendors/list.js/list.min.js"></script>
    <script src="~/DashBoard/assets/js/theme.js"></script> 
    <script src="~/js/vendor/jquery-1.10.1.min.js"></script>
    <script src="~/jquery-validation/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
 
</body>

</html>