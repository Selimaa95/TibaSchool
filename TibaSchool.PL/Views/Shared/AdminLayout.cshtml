<!DOCTYPE html>
<html lang="en-US">

<head>
    <meta http-equiv="content-type" content="text/htmlcharset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ===============================================-->
    <!--    Document Title-->
    <!-- ===============================================-->
    <title>@ViewBag.Title</title>

    <!-- ===============================================-->
    <!--    Favicons-->
    <!-- ===============================================-->
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/icons/logo2.png" />
    <meta name="msapplication-TileImage" content="~/DashBoard/assets/img/favicons/mstile-150x150.png" />
    <meta name="theme-color" content="#ffffff" />
    <script src="~/DashBoard/assets/js/config.js"></script>
    <script src="~/DashBoard/vendors/simplebar/simplebar.min.js"></script>

    <!-- ===============================================-->
    <!--    Stylesheets-->
    <!-- ===============================================-->
    <link href="~/css/section style/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/section style/style.css" rel="stylesheet" />
    <link href="~/css/section style/style-responsive.css" rel="stylesheet" />
    <!-- blueimp Gallery styles -->
    <link rel="stylesheet" href="https://blueimp.github.io/Gallery/css/blueimp-gallery.min.css">
    <!-- CSS to style the file input field as button and adjust the Bootstrap progress bars -->
    <link href="~/css/section style/file-uploader/css/jquery.fileupload.css" rel="stylesheet" />
    <link href="~/css/section style/file-uploader/css/jquery.fileupload-ui.css" rel="stylesheet" />
    <!-- CSS adjustments for browsers with JavaScript disabled -->
    <noscript>
        <link href="~/css/section style/file-uploader/css/jquery.fileupload-noscript.css" rel="stylesheet" />
    </noscript>
    <noscript>
        <link href="~/css/section style/file-uploader/css/jquery.fileupload-ui-noscript.css" rel="stylesheet" />
    </noscript>
    <link rel="preconnect" href="https://fonts.gstatic.com/" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700%7cPoppins:300,400,500,600,700,800,900&amp;display=swap"
          rel="stylesheet" />
    <link href="~/DashBoard/vendors/simplebar/simplebar.min.css" rel="stylesheet" />
    <link href="~/DashBoard/assets/css/theme-rtl.min.css" rel="stylesheet" id="style-rtl" />
    <link href="~/DashBoard/assets/css/theme.min.css" rel="stylesheet" id="style-default" />
    <link href="~/DashBoard/assets/css/user-rtl.min.css"
          rel="stylesheet"
          id="user-style-rtl" />
    <link href="~/DashBoard/assets/css/user.min.css"
          rel="stylesheet"
          id="user-style-default" />
    <script>
        {
            var linkRTL = document.getElementById("style-rtl");
            var userLinkRTL = document.getElementById("user-style-rtl");
            linkRTL.setAttribute("disabled", true);
            userLinkRTL.setAttribute("disabled", true);
        }
    </script>
    @RenderSection("Styles", required: false)

</head>

<body>
    <!--Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
        <div class="container-fluid" data-layout="container-fluid">

            <nav class="navbar navbar-light navbar-vertical navbar-expand-xl navbar-vibrant"
                 style="display: none">
                <script>
                    var navbarStyle = localStorage.getItem("navbarStyle");
                    if (navbarStyle && navbarStyle !== "transparent") {
                        document
                            .querySelector(".navbar-vertical")
                            .classList.add(`navbar-${navbarStyle}`);
                    }
                </script>
                <div class="d-flex align-items-center">
                    <div class="toggle-icon-wrapper">
                        <button class="btn navbar-toggler-humburger-icon navbar-vertical-toggle"
                                data-bs-toggle="tooltip"
                                data-bs-placement="left"
                                title="Toggle Navigation">
                            <span class="navbar-toggle-icon">
                                <span class="toggle-line"></span>
                            </span>
                        </button>
                    </div>
                    <a class="navbar-brand" asp-controller="AdminPanel" asp-action="Index">
                        <div class="d-flex align-items-center py-3">
                            <img class="me-2"
                                 src="/images/icons/logo.png"
                                 style="background-color:#2c7bf5"
                                 alt=""
                                 width="40" height="40" />
                            <span class="font-sans-serif">TIBA</span>
                        </div>
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="navbarVerticalCollapse">
                    <div class="navbar-vertical-content scrollbar">

                        <!-- #region Actions -->
                        <ul class="navbar-nav flex-column mb-3" id="navbarVerticalNav">
                            <li class="nav-item">
                                <a class="nav-link dropdown-indicator"
                                   href="#dashboard"
                                   role="button"
                                   data-bs-toggle="collapse"
                                   aria-expanded="true"
                                   aria-controls="dashboard">
                                    <div class="d-flex align-items-center">
                                        <span class="nav-link-icon"><span class="fas fa-chart-pie"></span></span><span class="nav-link-text ps-1">TIBA Dashboard</span>
                                    </div>
                                </a>

                            </li>
                            <!-- ******************************** Event ******************************************* -->
                            <li class="nav-item">
                                <!-- label-->
                                <div class="row navbar-vertical-label-wrapper mt-3 mb-2">
                                    <div class="col-auto navbar-vertical-label">Modules</div>
                                    <div class="col ps-0">
                                        <hr class="mb-0 navbar-vertical-divider" />
                                    </div>
                                </div>
                                <a class="nav-link dropdown-indicator"
                                   href="#events"
                                   role="button"
                                   data-bs-toggle="collapse"
                                   aria-expanded="false"
                                   aria-controls="events">
                                    <div class="d-flex align-items-center">
                                        <span class="nav-link-icon"><span class="fas fa-calendar-day"></span></span><span class="nav-link-text ps-1">Events</span>
                                    </div>
                                </a>
                                <ul class="nav collapse" id="events">
                                    <li id="subAddEvent" class="nav-item">
                                        <a id="addEvent" class="nav-link"
                                           asp-controller="Event" asp-action="Create">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-text ps-1">Create an event</span>
                                            </div>
                                        </a>
                                    </li>
                                    <li id="subEventList" class="nav-item">
                                        <a id="EventList" class="nav-link" asp-controller="Event" asp-action="Index">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-text ps-1">Event list</span>
                                            </div>
                                        </a>
                                    </li>
                                </ul>


                            </li>
                            <!-- ******************************** Event ******************************************* -->
                            <!-- ******************************** Images ******************************************* -->
                            <li class="nav-item">
                                <a class="nav-link dropdown-indicator"
                                   href="#images"
                                   role="button"
                                   data-bs-toggle="collapse"
                                   aria-expanded="false"
                                   aria-controls="images">
                                    <div class="d-flex align-items-center">
                                        <span class="nav-link-icon"><span class="fas fa-images"></span></span><span class="nav-link-text ps-1">Images</span>
                                    </div>
                                </a>
                                <ul class="nav collapse" id="images">
                                    <li id="subAddImage" class="nav-item">
                                        <a id="addImage" class="nav-link"
                                           asp-controller="Images" asp-action="Create">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-text ps-1">Add Images</span>
                                            </div>
                                        </a>
                                    </li>
                                    <li id="subEditImage" class="nav-item">
                                        <a id="editImage" class="nav-link" asp-controller="Images" asp-action="EditDelete">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-text ps-1">Edit & Delete Images</span>
                                            </div>
                                        </a>
                                    </li>
                                </ul>


                            </li>
                            <!-- ******************************** Images ******************************************* -->
                            <!-- ******************************** Videos ******************************************* -->
                            <li class="nav-item">
                                <a class="nav-link dropdown-indicator"
                                   href="#videos"
                                   role="button"
                                   data-bs-toggle="collapse"
                                   aria-expanded="false"
                                   aria-controls="videos">
                                    <div class="d-flex align-items-center">
                                        <span class="nav-link-icon"><span class="fas fa-video"></span></span><span class="nav-link-text ps-1">Videos</span>
                                    </div>
                                </a>
                                <ul class="nav collapse" id="videos">
                                    <li id="subAddVidoe" class="nav-item">
                                        <a id="addVidoe" class="nav-link"
                                           asp-controller="Videos" asp-action="Create">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-text ps-1">Add Video</span>
                                            </div>
                                        </a>
                                    </li>
                                    <li id="subEditVidoe" class="nav-item">
                                        <a id="editVidoe" class="nav-link" asp-controller="Videos" asp-action="EditDelete">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-text ps-1">Edit & Delete Videos</span>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!-- ******************************** Videos ******************************************* -->
                        </ul>
                        <!-- #endregion -->

                    </div>
                </div>
            </nav>
            <nav class="navbar navbar-light navbar-glass navbar-top navbar-expand-lg"
                 style="display: none">

            </nav>
            <div class="content">
                <nav class="navbar navbar-light navbar-glass navbar-top navbar-expand"
                     style="display: none">
                    <button class="btn navbar-toggler-humburger-icon navbar-toggler me-1 me-sm-3"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarVerticalCollapse"
                            aria-controls="navbarVerticalCollapse"
                            aria-expanded="false"
                            aria-label="Toggle Navigation">
                        <span class="navbar-toggle-icon">
                            <span class="toggle-line"></span>
                        </span>
                    </button>
                    <a class="navbar-brand me-1 me-sm-3" asp-controller="AdminPanel" asp-action="Index">
                        <div class="d-flex align-items-center">
                            <img class="me-2"
                                 src="~/DashBoard/assets/img/icons/spot-illustrations/falcon.png"
                                 alt=""
                                 width="40" />
                            <span class="font-sans-serif">TIBA</span>
                        </div>
                    </a>

                    <ul class="navbar-nav navbar-nav-icons ms-auto flex-row align-items-center">
                        <li class="nav-item dropdown px-1">
                            <form asp-controller="Account" asp-action="LogOut">
                                <input type="submit" value="Sign Out" class="btn btn-primary btn-block" />
                            </form>
                        </li>
                    </ul>
                </nav>


                <script>
                    var navbarPosition = localStorage.getItem("navbarPosition");
                    var navbarVertical = document.querySelector(".navbar-vertical");
                    var navbarTopVertical = document.querySelector(
                        ".content .navbar-top"
                    );
                    var navbarTop = document.querySelector(
                        "[data-layout] .navbar-top:not([data-double-top-nav"
                    );
                    var navbarDoubleTop = document.querySelector(
                        "[data-double-top-nav]"
                    );
                    var navbarTopCombo = document.querySelector(
                        '.content [data-navbar-top="combo"]'
                    );

                    if (localStorage.getItem("navbarPosition") === "double-top") {
                        document.documentElement.classList.toggle(
                            "double-top-nav-layout"
                        );
                    }

                    if (navbarPosition === "top") {
                        navbarTop.removeAttribute("style");
                        navbarTopVertical.remove(navbarTopVertical);
                        navbarVertical.remove(navbarVertical);


                    } else if (navbarPosition === "combo") {
                        navbarVertical.removeAttribute("style");
                        navbarTopCombo.removeAttribute("style");
                        navbarTop.remove(navbarTop);
                        navbarTopVertical.remove(navbarTopVertical);

                    } else if (navbarPosition === "double-top") {
                        navbarDoubleTop.removeAttribute("style");
                        navbarTopVertical.remove(navbarTopVertical);
                        navbarVertical.remove(navbarVertical);
                        navbarTop.remove(navbarTop);

                    } else {
                        navbarVertical.removeAttribute("style");
                        navbarTopVertical.removeAttribute("style");
                        navbarTop.remove(navbarTop);


                    }
                </script>

                @RenderBody()

                <footer class="footer">
                    <div class="g-0 justify-content-between fs--1 mt-4 mb-3">
                        <div class="col-12 col-sm-auto text-center">
                            <p class="mb-0 text-600">
                                Thank you for creating with Wide Horizon
                                <span class="d-none d-sm-inline-block">| </span><br class="d-sm-none" />
                                2023 &copy; <a href="https://WideHorizon.com/">Wide Horizon</a>
                            </p>
                        </div>
                    </div>
                </footer>
            </div>

        </div>
    </main>
    <!--    End of Content-->
    <!-- ===============================================-->


    <script src="~/DashBoard/vendors/popper/popper.min.js"></script>
    <script src="~/DashBoard/vendors/bootstrap/bootstrap.min.js"></script>
    <script src="~/DashBoard/vendors/anchorjs/anchor.min.js"></script>
    <script src="~/DashBoard/vendors/is/is.min.js"></script>
    <script src="~/DashBoard/vendors/echarts/echarts.min.js"></script>
    <script src="~/DashBoard/vendors/fontawesome/all.min.js"></script>
    <script src="~/DashBoard/vendors/lodash/lodash.min.js"></script>
    <script src="~/DashBoard/polyfill.io/v3/polyfill.min58be.js?features=window.scroll"></script>
    <script src="~/DashBoard/vendors/list.js/list.min.js"></script>
    <script src="~/DashBoard/assets/js/theme.js"></script>

    @RenderSection("JaqueryValidation", required: false)
    @RenderSection("AJaxScripts", required: false)


</body>

</html>
<script>
    $(document).ready(function () {
        var pageURL = $(location).attr("href");

        $(".nav-link a.active").removeClass('active');

        if (pageURL.includes("/Images/Create")) {
            $("#addImage").addClass('active');
            $("#subAddImage").parent().css("display", "block");
        }
        else if (pageURL.includes("/Images/EditDelete")) {
            $("#editImage").addClass('active');
            $("#subEditImage").parent().css("display", "block");
        }
        else if (pageURL.includes("/Videos/Create")) {
            $("#addVidoe").addClass('active');
            $("#subAddVidoe").parent().css("display", "block");
        }
        else if (pageURL.includes("/Videos/EditDelete")) {
            $("#editVidoe").addClass('active');
            $("#subEditVidoe").parent().css("display", "block");
        }
        else if (pageURL.includes("/Event/Create")) {
            $("#addEvent").addClass('active');
            $("#subAddEvent").parent().css("display", "block");
        }
        else if (pageURL.includes("/Event")) {
            $("#EventList").addClass('active');
            $("#subEventList").parent().css("display", "block");
        }
        else {
            $("#home").addClass('active');
        }
    });
</script>
