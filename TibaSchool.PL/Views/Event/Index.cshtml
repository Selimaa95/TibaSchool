@inject TibaSchool.BL.Interface.IEvent obj
@model IEnumerable<EventVM>
@{
    Layout = "/Views/shared/AdminLayout.cshtml";
    ViewData["Title"] = "Index";
}

<div class="card mb-3">
    <div class="card-header">
        <div class="row flex-between-end">
            <div class="col-auto align-self-center">
                <h3 class="mb-0">Events List</h3>
            </div>
        </div>
    </div>
    <div class="card-body bg-light">
        <div class="table-responsive scrollbar">
            <table id="example1" class="table">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Date</th>
                        <th scope="col">Image</th>
                        <th class="text-end" scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in await obj.GetAllAsync())
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Date.ToString("dd MMM yyyy")</td>
                            <td>
                                <img width="100" height="100" src="~/Files/UploadedImages/@item.ImageName" alt="@item.Title" />
                            </td>                          
                            <td class="text-end">
                                <div>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link p-0" type="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Details">
                                        <span class="text-500 fas fa-eye"></span>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-link p-0 ms-2" type="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                                        <span class="text-500 fas fa-edit"></span>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link p-0 ms-2" type="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                        <span class="text-500 fas fa-trash-alt"></span>
                                    </a>
                                </div>
                            </td>
                            @*
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                        <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>*@
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section JaqueryValidation
    {
    <script src="~/js/vendor/jquery-1.10.1.min.js"></script>
    <script src="~/jquery-validation/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
