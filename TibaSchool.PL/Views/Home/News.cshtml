    <div class="t-center">
        <span class="tit2 t-center">
            Soon

        </span>

    </div>


</div>*@

<!-- Blog -->
<section class="section-blog bg-white p-t-115 p-b-123">
    <div class="container">

        <div class="title-section-ourmenu t-center m-b-22">
            <h3 class="tit5 t-center m-t-2">
                News & Events
            </h3>
        </div>

        <div class="row">
            @foreach (var item in await obj.GetAllAsync())
            {
                <div class="col-md-4 p-t-30">
                    <!-- Block1 -->
                    <div class="blo1">
                        <div class="wrap-pic-blo1 bo-rad-10 hov-img-zoom pos-relative">
                            <a asp-controller="Home" asp-action="EventDetails" asp-route-id = "@item.Id">
                                <img src="~/Files/UploadedImages/@item.ImageName" alt="IMG-INTRO" style="height:200px; width:300px;">
                            </a>

                            <div class="time-blog">
                                @item.Date.ToString("d MMM yyyy")
                            </div>
                        </div>

                        <div class="wrap-text-blo1 p-t-35">
                            <a>
                                <h4 class="txt5 color0-hov trans-0-4 m-b-13">
                                    @item.Title
                                </h4>
                            </a>

                            <p class="m-b-20" style="overflow: auto; height: 100px; text-align:left">
                                @item.Description
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>


<!-- #endregion -->
